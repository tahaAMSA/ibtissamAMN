import React from 'react';
import type { Beneficiary } from 'wasp/entities';
import { Users } from 'lucide-react';

interface BeneficiaryGridProps {
  beneficiaries: Beneficiary[];
  language: 'fr' | 'ar';
  onEdit?: (beneficiary: Beneficiary) => void;
  onView?: (beneficiary: Beneficiary) => void;
  isLoading?: boolean;
}

const BeneficiaryGrid = ({
  beneficiaries,
  language,
  onEdit,
  onView,
  isLoading = false
}: BeneficiaryGridProps) {
  
  if (isLoading) {
    return (
      <div className="text-center py-12">
        <div className="text-lg">
          {language === 'ar' ? 'جاري التحميل...' : 'Chargement...'}
        </div>
      </div>
    );
  }

  if (!beneficiaries || beneficiaries.length === 0) {
    return (
      <div className="text-center py-12">
        <Users className="w-16 h-16 mx-auto text-gray-400 mb-4" />
        <h3 className="text-lg font-semibold text-gray-900">
          {language === 'ar' ? 'لا توجد مستفيدات' : 'Aucun bénéficiaire trouvé'}
        </h3>
      </div>
    );
  }

  return (
    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {beneficiaries.map((beneficiary: Beneficiary) => (
        <div key={beneficiary.id} className="bg-white rounded-lg p-4 shadow border hover:shadow-lg transition-shadow">
          <div className="flex items-center gap-3 mb-3">
            <div className={`w-10 h-10 rounded-full flex items-center justify-center text-white font-semibold ${
              beneficiary.gender === 'Female' ? 'bg-pink-500' : 'bg-blue-500'
            }`}>
              {beneficiary.firstName?.charAt(0)}{beneficiary.lastName?.charAt(0)}
            </div>
            <div className="flex-1 min-w-0">
              <h3 className="font-semibold text-gray-900 truncate">
                {beneficiary.firstName} {beneficiary.lastName}
              </h3>
              <p className="text-sm text-gray-500">{beneficiary.gender}</p>
            </div>
          </div>
          
          <div className="mt-3 flex gap-2">
            {onView && (
              <button 
                onClick={() => onView(beneficiary)}
                className="flex-1 px-3 py-2 text-sm bg-blue-50 text-blue-600 rounded hover:bg-blue-100 transition-colors"
              >
                {language === 'ar' ? 'عرض' : 'Voir'}
              </button>
            )}
            {onEdit && (
              <button 
                onClick={() => onEdit(beneficiary)}
                className="flex-1 px-3 py-2 text-sm bg-gray-50 text-gray-600 rounded hover:bg-gray-100 transition-colors"
              >
                {language === 'ar' ? 'تحرير' : 'Modifier'}
              </button>
            )}
          </div>
        </div>
      ))}
    </div>
  );
};

export default BeneficiaryGrid;